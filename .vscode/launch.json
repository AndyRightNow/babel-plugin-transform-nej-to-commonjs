{
    "version": "0.1.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Test",
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceRoot}/node_modules/jest/bin/jest.js",
                "--runInBand",
                "${fileBasename}"
            ],
            "stopOnEntry": true,
            "outFiles": [
                "${workspaceRoot}/build/**/*"
            ],
            "sourceMaps": true
        }
    ]
}